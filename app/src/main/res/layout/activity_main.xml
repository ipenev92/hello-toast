<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/toastButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/toast"
            app:backgroundTint="#0F40A3"
            app:layout_constraintTop_toTopOf="@id/numberText" />

        <TextView
            android:id="@+id/numberText"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="#EFF542"
            android:gravity="center"
            android:text="@string/zero"
            android:textColor="#0F40A3"
            android:textSize="300sp"
            app:layout_constraintTop_toTopOf="@id/toastButton"
            app:layout_constraintBottom_toBottomOf="@id/countButton"
            android:textStyle="bold" />

        <Button
            android:id="@+id/countButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/count"
            app:backgroundTint="#0F40A3"
            app:layout_constraintTop_toTopOf="@id/numberText" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>